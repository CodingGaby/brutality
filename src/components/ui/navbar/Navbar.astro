---
import NavLink from '../navbar/NavLink.astro';
import LoginBtn from '../navbar/LoginBtn.astro';
import GitHub from '../icons/GitHub.astro';


const navLinks = [
  {
    name: "About",
    route: "/about",
  }
]
---

<div class="border-b-4 sticky top-0 place-content-around border-b-black w-full text-gray-700 bg-white flex md:items-center md:justify-between md:flex-row md:px-6 lg:px-8">
  <a href="/" class="text-lg font-semibold p-4 tracking-widest text-gray-900 uppercase rounded-lg dark-mode:text-white focus:outline-none focus:shadow-outline hover:text-purple-600">Brutality</a>
  <nav class="flex justify-center items-center py-2 md:py-4 md:flex md:justify-end md:flex-row">
    {
      navLinks.map((route) => (
        <NavLink title={route.name} link={route.route}/>
      ))
    }
    <NavLink link='https://github.com/CodingGaby/brutality' nav={true}>
      <GitHub/>
    </NavLink>
    <LoginBtn/>
  </nav>
</div>