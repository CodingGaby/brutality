---
interface Props {
  href: string;
}

const { href } = Astro.props;
---

<a 
  class="px-4 py-2 mt-2 text-sm font-semibold md:mt-0 hover:text-gray-900 focus:text-gray-900 bg-white p-2 border-[3px] border-black hover:bg-[#FFFB47] shadow-[3px_3px_0px_0px_rgba(0,0,0)] hover:shadow-[5px_5px_0px_0px_rgba(0,0,0)] transition duration-300" 
  href={href}>
  <slot/>
</a>