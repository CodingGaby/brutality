---
import BrutalBtn from "./ui/buttons/BrutalBtn.astro";

interface Props {
	btnTitle?: string
	href: string;
	hasBtn: boolean
}

const { hasBtn, href, btnTitle } = Astro.props;
---

<div class="col-span-4 p-4"> 
	<div class="bg-[#a78bfa] border-black border-4 p-4 shadow-[5px_5px_0px_0px_rgba(0,0,0)] hover:shadow-[10px_10px_0px_0px_rgba(0,0,0)] transition duration-300">  
		<div class="flex flex-col justify-between items-start gap-4"> 
			<slot/>
			{
				hasBtn
					? <BrutalBtn href={href}>
							{btnTitle}
						</BrutalBtn>
					:
					<p></p>
			}
		</div>  
	</div> 
</div>