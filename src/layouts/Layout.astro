---
import { ViewTransitions } from 'astro:transitions';
import Navbar from '../components/ui/navbar/Navbar.astro';
import Modal from '../components/Modal.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet">
		<ViewTransitions/>
		<title>{title}</title>
	</head>
	<body>
		<Navbar/>
		<slot />
		<Modal/>
		<div class="flex items-center  justify-center w-full top-full">
			<p>Made with ❤️ by <a target="_blank" class="underline" href="https://github.com/CodingGaby">CodingGaby</a></p>
		</div>
	</body>
</html>
<style is:global>
	:root {
		font-family: "IBM Plex Mono";
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		background-size: 224px;
	}
</style>
